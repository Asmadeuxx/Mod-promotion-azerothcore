#######################################################
### AzerothCore Module Promotion configuration file ###
#######################################################
[worldserver]

###################################################################################################
# SECTION INDEX
#
#    ANNOUNCE ENABLE
#    SETTIGNS MODULE
#    CLASS ENABLE
#
###################################################################################################

###################################################################################################
# 
# ANNOUNCE ENABLE
# Enable Hello World message at server start 
# default: true
#
#
announce_module.enableHelloWorld=true

######################################################################################################
#	SETTIGNS MODULE
#
#		NpcPromotion.enable
#
#			Description:	Variable that enables or disables the module
#
#			Example:	"true" - (Enabled)
#						"false" - (Disabled)
#
#        Default:     true

promotionEnable.enable=true

#
#
#	    Promotion.count
#
#		Description:	Amount of promotion per account.
#
#			Example:	1 - (One)
#						2 - (Two)
#
#        Default:     1

promotion.count = 1

#
#
#     MoneyRewardPromotion
#
#     Description: Amount of promotion for character
#
#     Example: 10 - (10 cobber)
#              25000000 - (2500 gold)
#
#     Default: 25000000
#

MoneyRewardValue = 25000000

#
#
#     MountPromotion
#
#     Description: Here You Put The Spells Of The Promotion Mounts
#
#     Example: 42277 - ( Swift Spectral Tiger - ID SPELL)
#              37015 - ( Swift Nether Drake - ID SPELL)
#
#     Default: mountPromotion = 42277
#     Default: mountEnable.enable = true (Mounts Enabled In The Promotion)
#

mountEnable.enable = true
mountPromotion = 42277
